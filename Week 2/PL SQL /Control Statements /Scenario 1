DECLARE 
    C_ID CUSTOMERS.ID%TYPE ;
    C_AGE CUSTOMERS.AGE%TYPE ;
    C_INTEREST CUSTOMERS.INTEREST%TYPE ;
    CURSOR CUST_DETAILS IS
        SELECT ID, AGE, INTEREST FROM CUSTOMERS ;
BEGIN
    OPEN CUST_DETAILS ;
    LOOP
        FETCH CUST_DETAILS INTO C_ID, C_AGE, C_INTEREST ;
        IF CUST_DETAILS%NOTFOUND THEN
            EXIT ;
        END IF ;
        IF C_AGE >= 60 THEN
            UPDATE CUSTOMERS
            SET INTEREST = C_INTEREST - C_INTEREST * 0.01 
            WHERE ID = C_ID ;
        END IF ;
    END LOOP ;
    CLOSE CUST_DETAILS ;
    COMMIT ;
END ;
